extends ../layouts/app
block title
    #{title}
block content
    article
        div.container
            div.row
                div(class="eight columns")
                    div.content
                        h2= title
                        hr
                        each val in posts
                            - var ref = "blog/" + val._id
                            h2
                                a.alist(href=ref)= val.title
                            
                div(class="four columns")
                    include ../layouts/shared/aside        
