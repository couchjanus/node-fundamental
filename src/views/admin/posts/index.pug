extends ../../layouts/admin

block content
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  #{title}
      a(href='/admin/post/create' class='float-right btn btn-success') Create new
 
      .card-body
        .table-responsive
          table#dataTable.table.table-bordered(width='100%', cellspacing='0')
            thead
              tr
                th #
                th Title
                th(colspan=2) Actions
            tfoot
              tr
                th #
                th Title
                th(colspan=2) Actions

            if posts.length > 0

              tbody
                - var i = 0
                
                each post in posts
                  - i++
                  tr
                    td= i
                    td= post.title
                    td
                      a(href='post/'+post._id+'/update' class="btn btn-warning") Edit
                    td
                      a(href='post/'+post._id+'/delete' class="btn btn-danger") Delete
      .card-footer.small.text-muted
        - var now = new Date(Date.now())
        | Updated #{now}
