extends ../layouts/auth

block content
  .container
    .card.card-login.mx-auto.mt-5
      .card-header
        | Login
      .card-body
        form(method="POST")
          input(type='hidden', name='_csrf', value=csrftoken)
          .form-group
            label(for='email') Email address
            input#email.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email' name="email")
          .form-group
            label(for='password') Password
            input#password.form-control(type='password', placeholder='Password' name="password")
          .form-group
            .form-check
              label.form-check-label
                input.form-check-input(type='checkbox')
                |                   Remember Password
          input(type="submit" value="Login").btn.btn-primary.btn-block
        .text-center
          a.d-block.small.mt-3(href='/signup') Register an Account
          a.d-block.small(href='/forgot') Forgot Password?
        hr
        .form-group
          a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
            i.fa.fa-facebook
            | Sign in with Facebook
          a.btn.btn-block.btn-github.btn-social(href='/auth/github')
            i.fa.fa-twitter
            | Sign in with GitHub
          a.btn.btn-block.btn-google.btn-social(href='/auth/google')
            i.fa.fa-google-plus
            | Sign in with Google
